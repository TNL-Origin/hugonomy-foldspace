{
  "manifest_version": 3,
  "name": "VibeAI FoldSpace",
  "version": "2.14.6",
  "description": "P0 Beta Fix: Consent modal click race + session-only decline + recovery path",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*"
      ],
      "js": [
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "scripts/csp-bypass.js",
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "VibeAI FoldSpace",
    "default_popup": "privacy.html"
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://claude.ai/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "foldspace.js",
        "foldspace.html",
        "foldspace-client.js",
        "privacy.html",
        "src/foldspace.html",
        "src/privacy.html",
        "src/data/*.json",
        "icons/*.png",
        "icons/*.svg",
        "assembly/build/release.wasm",
        "assembly/build/release.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
