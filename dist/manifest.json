{
  "manifest_version": 3,
  "name": "VibeAI FoldSpace",
  "version": "2.15.0",
  "description": "Beta Release - ChatGPT, Claude, Gemini, Copilot (Chrome) support",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://copilot.cloud.microsoft/*",
        "https://bing.com/chat*",
        "https://www.bing.com/chat*"
      ],
      "js": [
        "scripts/parsers/base-parser.js",
        "scripts/parsers/chatgpt-parser.js",
        "scripts/parsers/claude-parser.js",
        "scripts/parsers/gemini-parser.js",
        "scripts/parsers/copilot-parser.js",
        "scripts/parsers/parser-registry.js",
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": [
        "scripts/csp-bypass.js",
        "scripts/parsers/base-parser.js",
        "scripts/parsers/chatgpt-parser.js",
        "scripts/parsers/claude-parser.js",
        "scripts/parsers/gemini-parser.js",
        "scripts/parsers/copilot-parser.js",
        "scripts/parsers/parser-registry.js",
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://m365.cloud.microsoft/*"],
      "js": [
        "scripts/csp-bypass.js",
        "scripts/parsers/base-parser.js",
        "scripts/parsers/chatgpt-parser.js",
        "scripts/parsers/claude-parser.js",
        "scripts/parsers/gemini-parser.js",
        "scripts/parsers/copilot-parser.js",
        "scripts/parsers/parser-registry.js",
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://copilot.microsoft.com/*"],
      "js": [
        "scripts/csp-bypass.js",
        "scripts/parsers/base-parser.js",
        "scripts/parsers/chatgpt-parser.js",
        "scripts/parsers/claude-parser.js",
        "scripts/parsers/gemini-parser.js",
        "scripts/parsers/copilot-parser.js",
        "scripts/parsers/parser-registry.js",
        "content-parser.js",
        "scripts/vibeai-coach/heuristics.js",
        "scripts/vibeai-coach/lexicon-data.js",
        "scripts/vibeai-coach/coach-panel.js",
        "scripts/unified-hud.js"
      ],
      "css": ["scripts/vibeai-coach/coach-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "VibeAI FoldSpace",
    "default_popup": "privacy.html"
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://claude.ai/*"
  ],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "foldspace.js",
        "foldspace.html",
        "foldspace-client.js",
        "privacy.html",
        "src/foldspace.html",
        "src/privacy.html",
        "src/data/*.json",
        "icons/*.png",
        "icons/*.svg",
        "assembly/build/release.wasm",
        "assembly/build/release.js",
        "scripts/hugoscore-integration.js",
        "scripts/hugoscore-engine.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
